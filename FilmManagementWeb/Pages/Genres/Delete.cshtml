@page
@model ConfirmDeleteModel
@{
    ViewData["Title"] = "Xác nhận xóa thể loại";
}

<h2>Xóa Thể Loại</h2>

@if (!string.IsNullOrEmpty(Model.errorMessage))
{
    <div style="color:red">@Model.errorMessage</div>
}

@if (!string.IsNullOrEmpty(Model.genreName))
{
    <p>Bạn có chắc muốn xóa thể loại <strong>@Model.genreName</strong> không?</p>

    <form method="post">
        <input type="hidden" name="GenreId" value="@Model.GenreId" />
        <button type="submit" class="btn btn-danger">Đồng ý xóa</button>
        <a href="/Genres" class="btn btn-secondary">Hủy</a>
    </form>
}
else
{
    <div>Không tìm thấy thể loại.</div>
}