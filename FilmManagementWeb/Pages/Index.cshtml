@page
@model FilmManagementWeb.Pages.HomepageModel
@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">Chào mừng đến với Quản lý Phim!</h1>
        <p class="lead mt-3">Khám phá các bộ phim nổi bật và quản lý kho phim của bạn.</p>
    </div>    

    <!-- Carousel for featured films -->
    <div id="filmCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.FeaturedFilms.Count; i++)
            {
                var film = Model.FeaturedFilms[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@film.ImageUrl" class="d-block w-100" style="max-height:400px;object-fit:cover;" alt="@film.Title" />
                    <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                        <h5>@film.Title</h5>
                        <p>@film.Description</p>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#filmCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#filmCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Film grid -->
    <h2 class="mb-4 text-secondary">Danh sách phim</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var film in Model.Films)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@film.ImageUrl" class="card-img-top" style="height:250px;object-fit:cover;" alt="@film.Title" />
                    <div class="card-body" style="color: #1a1e21">
                        <h5 class="card-title">@film.Title</h5>
                        <p class="card-text">@film.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
