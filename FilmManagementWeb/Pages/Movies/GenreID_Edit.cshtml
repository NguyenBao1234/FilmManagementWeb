@page "{id:int}"
@model FilmManagementWeb.Pages.Movies.GenreID_EditModel
@{
    ViewData["Title"] = "Chỉnh sửa thể loại phim";
}

<h2>Chỉnh sửa thể loại cho phim @Model.MovieId</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">@Model.Message</div>
}

<form method="post">
    <input type="hidden" asp-for="MovieId" />
    <div class="mb-3">
        @foreach (var genre in Model.AllGenres)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox"
                       name="SelectedGenreIds" value="@genre.GenreId"
                @(Model.SelectedGenreIds.Contains(genre.GenreId) ? "checked" : "") />
                <label class="form-check-label">@genre.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="/Movies" class="btn btn-secondary">Hủy</a>
</form>
